<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/rounded_white_background"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.app.barber.views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/str_enter_tip_amount"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <include layout="@layout/divider_view_grey" />

        <com.app.barber.views.CustomEditText
            android:id="@+id/amount_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:background="@drawable/rectangle_grey_border"
            android:inputType="number"
            android:maxLength="3"
            android:maxLines="1"
            android:padding="@dimen/_10sdp"
            android:singleLine="true" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_blue_drawable"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/str_continue"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>