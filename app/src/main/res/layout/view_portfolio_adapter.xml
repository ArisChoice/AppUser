<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/portfolio_image"
        android:layout_width="@dimen/_90ssp"
        android:layout_height="@dimen/_90ssp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/img_sample_copy"
        android:scaleType="centerCrop"
        app:roundBottomEnd="true"
        app:roundBottomLeft="true"
        app:roundBottomRight="true"
        app:roundBottomStart="true"
        app:roundedCornerRadius="@dimen/_3sdp"
        app:roundingBorderColor="@color/color_light_grey_blue"
        app:roundingBorderWidth="@dimen/_2sdp" />
</android.support.constraint.ConstraintLayout>