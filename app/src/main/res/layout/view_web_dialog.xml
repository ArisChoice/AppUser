<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_white_border"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">

    <com.app.barber.views.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_app_blue"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/str_cancellation_policy"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_14ssp" />

    <WebView
        android:id="@+id/cancellation_policy_wbiew"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:minHeight="@dimen/_300sdp"></WebView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30ssp"
        android:layout_gravity="center" />

    <com.app.barber.views.CustomTextView
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_blue_drawable"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/str_cancel"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_14ssp" />


</LinearLayout>